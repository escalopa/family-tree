# Production Environment Variables
# Copy this file to .env and update with your actual values

# Domain Configuration
DOMAIN=your-domain.com
EMAIL=your-email@example.com  # For Let's Encrypt notifications

# Database Configuration
POSTGRES_USER=familytree
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=familytree

# Redis Configuration
REDIS_PASSWORD=your-redis-password-here

# MinIO Configuration
MINIO_ROOT_USER=your-minio-user
MINIO_ROOT_PASSWORD=your-secure-minio-password-here
MINIO_BUCKET=family-tree-images

# Frontend API URL (use /api for same-domain or full URL for different domain)
VITE_API_URL=/api
